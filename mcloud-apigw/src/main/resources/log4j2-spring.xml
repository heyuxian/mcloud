<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

  <Properties>
    <Property name="appName" value="mcloud-apigw"/>
    <Property name="baseLogDir" value="/data/logs/${appName}"/>
    <Property name="pattern" value="%d{HH:mm:ss.SSS} [%t] %-5level %c{1.} - %msg%n"/>
  </Properties>

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${pattern}"/>
    </Console>

    <RollingFile name="RollingFile" fileName="${baseLogDir}/${appName}.log"
      filePattern="${baseLogDir}/$${date:yyyy-MM}/${appName}-%d{yyyy-MM-dd}-%i.log.gz">
      <PatternLayout pattern="${pattern}"/>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
    </RollingFile>
    <Async name="AsyncRollingFile">
      <AppenderRef ref="RollingFile"/>
    </Async>

    <RollingFile name="ErrorRollingFile" fileName="${baseLogDir}/${appName}.error.log"
      filePattern="${baseLogDir}/$${date:yyyy-MM}/${appName}-%d{yyyy-MM-dd}-%i.error.log.gz">
      <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
      <PatternLayout pattern="${pattern}"/>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
    </RollingFile>
    <Async name="ErrorAsyncRollingFile">
      <AppenderRef ref="ErrorRollingFile"/>
    </Async>

  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="AsyncRollingFile"/>
      <AppenderRef ref="ErrorAsyncRollingFile"/>
    </Root>

    <Logger name="org.springframework" level="warn"/>
    <Logger name="springfox.documentation" level="warn"/>
  </Loggers>

</Configuration>